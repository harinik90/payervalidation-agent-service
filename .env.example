# Copy this file to .env and fill in values before running.
# Never commit .env to source control.

# ── MAF layer ────────────────────────────────────────────────────────────────
# Azure AI Foundry project resource ID
AZURE_AI_FOUNDRY_PROJECT=

# Azure OpenAI endpoint and key (used for text-embedding-3-large)
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=

# Deployed embedding model name
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-large

# MAF agent IDs (set after creating agents in Azure AI Foundry)
ORCHESTRATOR_AGENT_ID=
POLICY_AGENT_ID=
CODING_AGENT_ID=
ELIGIBILITY_AGENT_ID=
SANCTIONS_AGENT_ID=
REGULATORY_AGENT_ID=

# ── Claude Agent SDK layer ────────────────────────────────────────────────────
# Anthropic API key — used by the bridge when calling claude-opus-4-6 via MCP
ANTHROPIC_API_KEY=

# ── Local data paths ──────────────────────────────────────────────────────────
# Root directory for all local data (raw, chroma, db, audit)
DATA_DIR=./data

# ── Optional: override default model ─────────────────────────────────────────
# Model used by Claude Agent SDK inside bridge_authority_lookup
BRIDGE_MODEL=claude-opus-4-6

# ── Logging ───────────────────────────────────────────────────────────────────
LOG_LEVEL=INFO
